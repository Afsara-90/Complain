<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_law04"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99EEFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dowry.com.dowrycompain.Law04Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="14dp"
        android:id="@+id/llaw4"
        android:text="Offence to be non cognizable"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="23dp"
        android:id="@+id/descrip4"
        android:text="Every offence under this Act shall be non cognizable, non-bailable and compoundable."
        android:layout_below="@+id/llaw4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
