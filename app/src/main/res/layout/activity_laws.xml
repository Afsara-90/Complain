<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#99EEFF"
    android:orientation="vertical" >




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laws"
        android:layout_margin="10dp"
        android:textColor="#00CCDD"
        android:textSize="40dp"
        android:textStyle="italic"/>


    <Button android:id="@+id/law1_c"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Law 1"
        android:layout_margin="10dp"
        android:textStyle="normal"
        android:textSize="25dp"
        android:textColor="#666666"
        android:background="#00FFFFFF"/>

    <Button android:id="@+id/law2_c"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Law 2"
        android:layout_margin="10dp"
        android:textStyle="normal"
        android:textSize="25dp"
        android:textColor="#666666"
        android:background="#00FFFFFF"/>
    <Button android:id="@+id/law3_c"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Law 3"
        android:layout_margin="10dp"
        android:textStyle="normal"
        android:textSize="25dp"
        android:textColor="#666666"
        android:background="#00FFFFFF"/>
    <Button android:id="@+id/law4_c"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Law 4"
        android:layout_margin="10dp"
        android:textStyle="normal"
        android:textSize="25dp"
        android:textColor="#666666"
        android:background="#00FFFFFF"/>
    <Button android:id="@+id/law5_c"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Law 5"
        android:layout_margin="10dp"
        android:textStyle="normal"
        android:textSize="25dp"
        android:textColor="#666666"
        android:background="#00FFFFFF"/>

    <Button android:id="@+id/back_l_c"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Back"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#666666"
        android:background="#00FFFFFF"/>

</LinearLayout>
